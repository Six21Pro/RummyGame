  @staticmethod#can do this apparently
  def converter(toConvert):
    if toConvert == '1':
      toConvert = 10
    if toConvert == 'J':
      toConvert = 11
    if toConvert == 'Q' :
      toConvert = 12
    if toConvert ==  'K' :
      toConvert = 13
    if toConvert == 'A':
      toConvert = 14
    return toConvert

